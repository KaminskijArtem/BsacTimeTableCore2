@model List<BsacTimeTableCore2.Data.DBModels.Group>

@{
    ViewData["Title"] = "Open";
}

<environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap-select/dist/css/bootstrap-select.css" />
</environment>
<environment exclude="Development">
    <link href="~/lib/bootstrap-select/dist/css/bootstrap-select.min.css" rel="stylesheet" />
</environment>

<form asp-action="Open" asp-route-id=@Context.Request.Query["id"] method="post">

    <table class="table table-bordered" style="margin-top: 2px;">
        @await Html.PartialAsync("_ManageRecordsOpenHeadPartial")
        <tbody>
            @for (int c = 0; c < Model.Count; c++)
            {
                <tr>
                    <td>@Model[c].Name</td>

                    @{ var z = 0; }
                    @foreach (var r in Model[c].Records)
                    {
                        <td onclick="showModal(this)">
                            @if (@Model[c].Records[z].SubjectId != 0)
                            {
                                @Model[c].Records[z].ClassroomId <br>
                                @Model[c].Records[z].LecturerId <br>
                                @Model[c].Records[z].SubjectId
                            }
                            <input hidden="hidden" asp-for="@Model[c].Records[z].Id" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].Date" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].GroupId" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].ClassroomId" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].LecturerId" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].SubjectForId" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].SubjectId" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].SubjectTypeId" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].SubjOrdinalNumber" />
                            <input hidden="hidden" asp-for="@Model[c].Records[z].IsChanged" />
                            @{z++;}
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Сохранить" class="btn btn-default" />

    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Редактирование</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="exampleModalInputs">
                    <input /><br>
                    <input /><br>
                    <input /><br>
                    <input /><br>
                    <input /><br>
                    <input /><br>
                    <input /><br>
                    <input /><br>
                    <input /><br>
                    <input value="true" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    <button type="button" class="btn btn-primary" onclick="saveAndCloseModal()">Сохранить</button>
                </div>
            </div>
        </div>
    </div>
</form>
<br>
<select class="selectpicker" data-live-search="true">
    <option>Mustard</option>
    <option>Ketchup</option>
    <option>Barbecue</option>
</select>

@section Scripts{

    <environment include="Development">
        <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    </environment>

    <script>
        var globalModalObj;

        function showModal(domObj) {
            globalModalObj = domObj;
            $("#exampleModalLong").modal();
            var jsObjs = $(domObj).find('input');
            var jsInputs = $('#exampleModalLong input');
            for (var i = 0; i < jsObjs.length - 1; i++) {
                jsInputs[i].value = jsObjs[i].value;
            }
        }

        function saveAndCloseModal() {
            var jsInputs = $("#exampleModalInputs input");
            var jsTdInputs = $(globalModalObj).find('input');

            for (var i = 0; i < jsTdInputs.length; i++) {
                $(jsTdInputs[i]).val($(jsInputs[i]).val());
            }



            $("#exampleModalLong").modal("hide");
        }
    </script>
}
