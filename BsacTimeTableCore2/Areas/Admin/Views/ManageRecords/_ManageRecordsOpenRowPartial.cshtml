@model BsacTimeTableCore2.Data.DBModels.Group
<tr>
    <td>@Model.Name</td>
    @for (var i = 1; i < 6; i++)
    {
        for (var j = 1; j < 7; j++)
        {
            var rec = Model.Records.Where(x => (x.SubjOrdinalNumber == j && (int)x.Date.DayOfWeek == i)).FirstOrDefault();
            if (rec == null)
            {
                <td></td>
            }
            else
            {
                <td>@rec.Date.DayOfWeek | @rec.SubjOrdinalNumber</td>
            }
        }
    }
</tr>
